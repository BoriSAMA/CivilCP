<%- include('../structure/header.ejs') %>

    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar Sesión</h3></div>
                                    <%- include ("../partials/messages"); %>
                                    <div class="card-body">
                                        <form method="POST" action="/user/login">
                                            <div class="form-group">
                                                <label class="small mb-1" for="ingresarCorreo">Correo</label>
                                                <input class="form-control py-4" name="mail" id="ingresarCorreo" type="email" placeholder="Ingresar correo" />
                                            </div>
                                            <div class="form-group">
                                                <label class="small mb-1" for="ingresarContraseña">Contraseña</label>
                                                <input class="form-control py-4" name="pass" id="ingresarContraseña" type="password" placeholder="Ingresar Contraseña" />
                                            </div>
                                            <div class="form-group mt-4 mb-0">
                                                <button class="btn btn-primary btn-block" type="submit">Iniciar Sesión</button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center">
                                        <div class="small"><a href="/user/register">¿No tienes una cuenta? Registrate!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <%- include('../structure/footer.ejs') %>
    </body>
</html>