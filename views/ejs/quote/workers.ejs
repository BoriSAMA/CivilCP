<main>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-12 mt-4">
          <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-table mr-1"></i>
                  Trabajadores
              </div>
              <div class="card ml-2 mb-2 mt-2 mr-2">
                  <div id="workers" class="table-responsive">
                      <table class="table table-bordered table-hover align-middle" width="100%" height="100%" cellspacing="0">
                          <thead class="table-secondary">
                              <tr>
                                <th class="align-middle" width="5%">#</th>
                                <th class="align-middle" width="15%">Nombre</th>
                                <th class="align-middle" width="10%">Cédula</th>
                                <th class="align-middle" width="7%">Celular</th>
                                <th class="align-middle" width="10%">Tipo</th>
                                <th class="align-middle" width="20%">Especialidad</th>
                                <th class="text-center" width="11%">
                                  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addWkModal">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    Añadir
                                  </button>
                                </th>
                              </tr>
                          </thead>
                          <tbody>
                            <%if(locals.worker) { -%>
                              <%if(worker.length > 0) { -%>
                                  <%for(var i = 0; i < worker.length; i++) { -%>
                                      <tr>
                                          <td class="align-middle"><%= i + 1 %></td>
                                          <td class="align-middle"><%= worker[i].NAME %></td>
                                          <td class="align-middle"><%= worker[i].CC %></td>
                                          <td class="align-middle"><%= worker[i].PHONE %></td>
                                          <td class="align-middle"><%= worker[i].rank.NAME %></td>
                                          <td class="align-middle"><%= worker[i].SKILL %></td>
                                          <td>
                                            <div class="row mw-100 m-0">
                                              <div class="col">
                                                <button class="w-100 btn btn-primary" data-toggle="modal" data-target="#updWkModal" onclick="initWk('<%= worker[i].ID %>')">
                                                  <i class="fa fa-pen" aria-hidden="true"></i>
                                                </button>
                                              </div>
                                              <div class="col">
                                                <button class="w-100 btn btn-danger" onclick="delWk('<%=worker[i].ID %>')">
                                                  <i class="fa fa-trash" aria-hidden="true"></i>
                                                </button>
                                              </div>
                                            </div>
                                          </td>
                                      </tr>
                                  <%}%>
                              <%} else{%>
                                  <td colspan="7"><h4 class="text-center Normal weight text">No se han añadido trabajadores</h4></td>
                              <%}%>
                            <%}%>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>
  <!-- Modal add-->
  <div class="modal fade" id="addWkModal" tabindex="-2" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal2-title" id="exampleModalLongTitle">Añadir Trabajador</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label class="small mb-1">Nombre</label>
            <input class="form-control" type="text" id="wk_name" placeholder="Nombre del Trabajador">
          </div>
          <div class="form-group">
            <label class="small mb-1">Cédula de Ciudadania</label>
            <input class="form-control" type="number" id="wk_cc" placeholder="Número de Cédula">
          </div>
          <div class="form-group">
            <label class="small mb-1">Celular</label>
            <input class="form-control" type="number" id="wk_phone" placeholder="Número de Celular">
          </div>
          <div class="form-group">
            <label for="worker_rank">Tipo</label>
            <select id="wk_rank" class="custom-select selectBuscar">

            </select>
          </div>
          <div class="form-group">
            <label class="small mb-1">Especialidad</label>
            <input class="form-control" type="text" id="wk_skill" placeholder="Especialidad">
          </div>
          <input type="number" id="wk_id" hidden>
        </div>
        <div class="modal-footer">
          <div class="card w-100 mt-2">
              <button class="btn btn-primary btn-block" type="button" onclick="regWk()">
                Guardar trabajador
              </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal upd-->
  <div class="modal fade" id="updWkModal" tabindex="-3" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal2-title" id="exampleModalLongTitle">Editar Trabajador</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label class="small mb-1">Nombre</label>
            <input class="form-control" type="text" id="upd_wk_name" placeholder="Nombre del Trabajador">
          </div>
          <div class="form-group">
            <label class="small mb-1">Cédula de Ciudadania</label>
            <input class="form-control" type="number" id="upd_wk_cc" placeholder="Número de Cédula">
          </div>
          <div class="form-group">
            <label class="small mb-1">Celular</label>
            <input class="form-control" type="number" id="upd_wk_phone" placeholder="Número de Celular">
          </div>
          <div class="form-group">
            <label for="worker_rank">Tipo</label>
            <select id="upd_wk_rank" class="custom-select selectBuscar">

            </select>
          </div>
          <div class="form-group">
            <label class="small mb-1">Especialidad</label>
            <input class="form-control" type="text" id="upd_wk_skill" placeholder="Especialidad">
          </div>
          <input type="number" id="upd_wk_id" hidden>
        </div>
        <div class="modal-footer">
          <div class="card w-100 mt-2">
              <button class="btn btn-primary btn-block" type="button" onclick="updWk()">
                Guardar trabajador
              </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ("../partials/message-modal"); %>
</main>
